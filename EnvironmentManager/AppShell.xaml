<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EnvironmentManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:EnvironmentManager.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="HOME">
            <ShellContent
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="home" />
        </Tab>
        <Tab Title="MAINTENANCE">
            <ShellContent
                ContentTemplate="{DataTemplate views:AllMaintenancePage}"
                Route="maintenance" />
        </Tab>
        <Tab Title="SENSORS">
            <ShellContent
                ContentTemplate="{DataTemplate views:SensorPage}"
                Route="sensors" />
        </Tab>
        <Tab Title="ABOUT">
            <ShellContent
                ContentTemplate="{DataTemplate views:AboutPage}"
                Route="about" />
        </Tab>
    </TabBar>

</Shell>
