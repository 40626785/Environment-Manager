<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EnvironmentManager.Views"
             xmlns:viewModels="clr-namespace:EnvironmentManager.ViewModels"
             x:Class="EnvironmentManager.Views.AllMaintenancePage"
             Title="Maintenance"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Custom Navigation Bar -->
        <Grid Grid.Row="0" 
              BackgroundColor="#6b46c1" 
              Padding="15,40,15,15"
              ColumnDefinitions="*,Auto">
            
            <!-- Title -->
            <Label Grid.Column="0"
                   Text="Maintenance Overview"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="10,0,0,0"
                   VerticalOptions="Center"/>
            
            <!-- Notification Button -->
            <Button Grid.Column="1"
                    Text="ðŸ””"
                    FontSize="18"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Padding="0"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"/>
        </Grid>

        <!-- Navigation Menu -->
        <Grid Grid.Row="1" BackgroundColor="#f5f5f5" Padding="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Dashboard" 
                   Grid.Column="0"
                   TextColor="#666666"
                   FontSize="16"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDashboardClicked"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="Maintenance" 
                   Grid.Column="1"
                   TextColor="#6750A4"
                   FontSize="16"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMaintenanceClicked"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="About" 
                   Grid.Column="2"
                   TextColor="#666666"
                   FontSize="16"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAboutClicked"/>
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <VerticalStackLayout Spacing="10" Margin="5">
                <CollectionView x:Name="maintenanceCollection"
                              ItemsSource="{Binding AllMaintenance}"
                              Margin="20">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Source="{FontImage Glyph='!', Color=Red, Size=15}"
                                    Grid.Column="0" 
                                    IsVisible="{Binding Overdue}"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>
                                <Label Text="{Binding Path=Id, StringFormat='ENV-{0}'}"
                                    Grid.Column="1" 
                                    HorizontalTextAlignment="Center"
                                    FontSize="15"
                                    VerticalOptions="Center"/> 
                                <Label Text="{Binding Priority}"
                                    Grid.Column="2" 
                                    HorizontalTextAlignment="Center"
                                    FontSize="15"
                                    VerticalOptions="Center"/> 
                                <Label Text="{Binding Path=DueDate, StringFormat='{0:yyyy-MM-dd}'}"
                                    Grid.Column="3"
                                    HorizontalTextAlignment="Center"
                                    FontSize="15"
                                    VerticalOptions="Center"/>
                                <Button Grid.Column="4"
                                        Text="Edit/View Detail"
                                        FontSize="10"
                                        VerticalOptions="Center"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:AllMaintenancePage}}, Path=BindingContext.EditCommand}"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="Add Ticket" Command="{Binding NewTicketCommand}" Margin="20,0"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
