<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnvironmentManager.Views.HomePage"
             Title="Home"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">
       <Grid RowDefinitions="Auto,*">
              <!-- Header -->
              <Grid Grid.Row="0"
                    BackgroundColor="#6750A4"
                    Padding="20,40,20,20">
                     <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                     </Grid.RowDefinitions>

                     <Label Grid.Row="0"
                            Text="Home"
                            TextColor="White"
                            FontSize="24"
                            FontAttributes="Bold"/>
              </Grid>

              <!-- Main Content -->
              <ScrollView Grid.Row="1">
                     <VerticalStackLayout Padding="15"
                                          Spacing="15">


                            <!-- Metric Cards -->
                            <Grid ColumnSpacing="10"
                                  RowSpacing="10"
                                  Padding="0,10,0,10">
                                   <Grid.ColumnDefinitions>
                                          <ColumnDefinition Width="*"/>
                                          <ColumnDefinition Width="*"/>
                                   </Grid.ColumnDefinitions>
                                   <Grid.RowDefinitions>
                                          <RowDefinition Height="Auto"/>
                                          <RowDefinition Height="Auto"/>
                                   </Grid.RowDefinitions>

                                   <!-- Air Quality Card -->
                                   <Frame Grid.Row="0"
                                                 Grid.Column="0"
                                          Padding="15"
                                          BorderColor="Transparent"
                                          HasShadow="True">
                                          <VerticalStackLayout Spacing="5">
                                                 <Label Text="Air Quality Index"
                                                        FontSize="14"/>
                                                 <Label Text="72"
                                                        FontSize="32"
                                                        FontAttributes="Bold"/>
                                                 <Label Text="Moderate"
                                                        TextColor="Orange"
                                                        FontSize="14"/>
                                                 <ProgressBar Progress="0.72"
                                                              BackgroundColor="#f0f0f0"
                                                              ProgressColor="Orange"/>
                                          </VerticalStackLayout>
                                   </Frame>

                                   <!-- Water pH Card -->
                                   <Frame Grid.Row="0"
                                                 Grid.Column="1"
                                          Padding="15"
                                          BorderColor="Transparent"
                                          HasShadow="True">
                                          <VerticalStackLayout Spacing="5">
                                                 <Label Text="Water pH Level"
                                                        FontSize="14"/>
                                                 <Label Text="7.2"
                                                        FontSize="32"
                                                        FontAttributes="Bold"/>
                                                 <Label Text="Normal"
                                                        TextColor="#28a745"
                                                        FontSize="14"/>
                                                 <ProgressBar Progress="0.72"
                                                              BackgroundColor="#f0f0f0"
                                                              ProgressColor="#28a745"/>
                                          </VerticalStackLayout>
                                   </Frame>

                                   <!-- Temperature Card -->
                                   <Frame Grid.Row="1"
                                                 Grid.Column="0"
                                          Padding="15"
                                          BorderColor="Transparent"
                                          HasShadow="True">
                                          <VerticalStackLayout Spacing="5">
                                                 <Label Text="Temperature"
                                                        FontSize="14"/>
                                                 <Label Text="24Â°C"
                                                        FontSize="32"
                                                        FontAttributes="Bold"/>
                                                 <Label Text="Partly Cloudy"
                                                        TextColor="#007bff"
                                                        FontSize="14"/>
                                                 <ProgressBar Progress="0.5"
                                                              BackgroundColor="#f0f0f0"
                                                              ProgressColor="#007bff"/>
                                          </VerticalStackLayout>
                                   </Frame>

                                   <!-- Sensor Status Card -->
                                   <Frame Grid.Row="1"
                                                 Grid.Column="1"
                                          Padding="15"
                                          BorderColor="Transparent"
                                          HasShadow="True">
                                          <VerticalStackLayout Spacing="5">
                                                 <Label Text="Sensor Status"
                                                        FontSize="14"/>
                                                 <Label Text="42"
                                                        FontSize="32"
                                                        FontAttributes="Bold"/>
                                                 <Grid ColumnDefinitions="*,Auto"
                                                       ColumnSpacing="5">
                                                        <ProgressBar Grid.Column="0"
                                                                     Progress="0.85"
                                                                     BackgroundColor="#f0f0f0"
                                                                     ProgressColor="#28a745"
                                                                     VerticalOptions="Center"/>
                                                        <Label Grid.Column="1"
                                                               Text="42 Online"
                                                               TextColor="#28a745"
                                                               FontSize="14"
                                                               VerticalOptions="Center"/>
                                                 </Grid>
                                                 <Grid ColumnDefinitions="*,Auto"
                                                       Margin="0,8,0,0">
                                                        <Label Text="Warning"
                                                               Grid.Column="0"
                                                               FontSize="12"
                                                               TextColor="#ffc107"/>
                                                        <Label Text="7"
                                                               Grid.Column="1"
                                                               FontSize="12"/>
                                                 </Grid>
                                          </VerticalStackLayout>
                                   </Frame>
                            </Grid>


                            <!-- Active Alerts -->
                            <VerticalStackLayout Spacing="10"
                                                 Padding="0,10,0,0">
                                   <Label Text="Active Alerts"
                                          FontSize="18"
                                          FontAttributes="Bold"/>
                                   <Label Text="Recent environmental alerts requiring attention"
                                          TextColor="Gray"
                                          FontSize="12"/>
                                   <CollectionView ItemsSource="{Binding TopAlerts}"
                                                   Margin="0,10,0,0">
                                          <CollectionView.ItemTemplate>
                                                 <DataTemplate>
                                                        <Frame Padding="10"
                                                               BorderColor="#dc3545"
                                                               HasShadow="False"
                                                               Margin="0,5">
                                                               <Grid ColumnDefinitions="Auto,*,Auto"
                                                                     ColumnSpacing="10">
                                                                      <Label Text="â "
                                                                             TextColor="#dc3545"/>
                                                                      <VerticalStackLayout Grid.Column="1"
                                                                                           Spacing="2">
                                                                             <Label Text="{Binding Message}"
                                                                                    FontAttributes="Bold"
                                                                                    FontSize="14"/>
                                                                             <Label Text="{Binding Parameter, StringFormat='Parameter: {0}'}"
                                                                                    TextColor="Gray"
                                                                                    FontSize="12"/>
                                                                             <Label Text="{Binding LocationId, StringFormat='Location ID: {0}'}"
                                                                                    TextColor="Gray"
                                                                                    FontSize="12"/>
                                                                      </VerticalStackLayout>
                                                                      <Label Grid.Column="2"
                                                                             Text="Active"
                                                                             TextColor="White"
                                                                             BackgroundColor="#dc3545"
                                                                             Padding="8,4"
                                                                             FontSize="12"/>
                                                               </Grid>
                                                        </Frame>
                                                 </DataTemplate>
                                          </CollectionView.ItemTemplate>
                                   </CollectionView>

                                   <Button Text="View All Alerts"
                                           BackgroundColor="Red"
                                           TextColor="White"
                                           FontAttributes="Bold"
                                           Command="{Binding NavigateToAlertsCommand}"
                                           Padding="10"/>
                                   <!-- Button for Database Admin -->
                                   <!-- Button for database admin -->
                                   <Button Text="Database Admin"
                                           BackgroundColor="#6750A4"
                                           TextColor="White"
                                           CornerRadius="8"
                                           Padding="10"
                                           Clicked="OnDatabaseAdminClicked"
                                           Margin="0,10,0,20"/>
                            </VerticalStackLayout>

                     </VerticalStackLayout>
              </ScrollView>
       </Grid>
</ContentPage>
