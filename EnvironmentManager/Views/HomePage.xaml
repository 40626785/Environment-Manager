<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnvironmentManager.Views.HomePage"
             Title="Dashboard Overview"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Custom Navigation Bar -->
        <Grid Grid.Row="0" 
              BackgroundColor="#6b46c1" 
              Padding="15,40,15,15"
              ColumnDefinitions="*,Auto">
            
            <!-- Title -->
            <Label Grid.Column="0"
                   Text="Dashboard Overview"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="10,0,0,0"
                   VerticalOptions="Center"/>
            
            <!-- Notification Button -->
            <Button Grid.Column="1"
                    Text="ðŸ””"
                    FontSize="18"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Padding="0"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"/>
        </Grid>

        <!-- Navigation Menu -->
        <Grid Grid.Row="1" BackgroundColor="#f5f5f5" Padding="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Dashboard" 
                   Grid.Column="0"
                   TextColor="#6750A4"
                   FontSize="16"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDashboardClicked"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="Maintenance" 
                   Grid.Column="1"
                   TextColor="#666666"
                   FontSize="16"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMaintenanceClicked"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="About" 
                   Grid.Column="2"
                   TextColor="#666666"
                   FontSize="16"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAboutClicked"/>
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="2">
            <Grid Padding="15" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Metric Cards -->
                <Grid Grid.Row="0" ColumnSpacing="10" RowSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Air Quality Card -->
                    <Frame Grid.Column="0" Grid.Row="0" Padding="15" BorderColor="Transparent" HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Air Quality Index" FontSize="14"/>
                            <Label Text="72" FontSize="32" FontAttributes="Bold"/>
                            <Label Text="Moderate" TextColor="Orange" FontSize="14"/>
                            <ProgressBar Progress="0.72" 
                                       BackgroundColor="#f0f0f0"
                                       ProgressColor="Orange"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Water pH Card -->
                    <Frame Grid.Column="1" Grid.Row="0" Padding="15" BorderColor="Transparent" HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Water pH Level" FontSize="14"/>
                            <Label Text="7.2" FontSize="32" FontAttributes="Bold"/>
                            <Label Text="Normal" TextColor="#28a745" FontSize="14"/>
                            <ProgressBar Progress="0.72" 
                                       BackgroundColor="#f0f0f0"
                                       ProgressColor="#28a745"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Temperature Card -->
                    <Frame Grid.Column="0" Grid.Row="1" Padding="15" BorderColor="Transparent" HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Temperature" FontSize="14"/>
                            <Label Text="24Â°C" FontSize="32" FontAttributes="Bold"/>
                            <Label Text="Partly Cloudy" TextColor="#007bff" FontSize="14"/>
                            <ProgressBar Progress="0.5" 
                                       BackgroundColor="#f0f0f0"
                                       ProgressColor="#007bff"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Sensor Status Card -->
                    <Frame Grid.Column="1" Grid.Row="1" Padding="15" BorderColor="Transparent" HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Sensor Status" FontSize="14"/>
                            <Label Text="42" FontSize="32" FontAttributes="Bold"/>
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5">
                                <ProgressBar Grid.Column="0"
                                           Progress="0.85" 
                                           BackgroundColor="#f0f0f0"
                                           ProgressColor="#28a745"
                                           VerticalOptions="Center"/>
                                <Label Grid.Column="1" 
                                      Text="42 Online"
                                      TextColor="#28a745" 
                                      FontSize="14"
                                      VerticalOptions="Center"/>
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto" Margin="0,8,0,0">
                                <Label Text="Warning" Grid.Column="0" FontSize="12" TextColor="#ffc107"/>
                                <Label Text="7" Grid.Column="1" FontSize="12"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Active Alerts -->
                <VerticalStackLayout Grid.Row="2" Spacing="10">
                    <Label Text="Active Alerts" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    <Label Text="Recent environmental alerts requiring attention" 
                           TextColor="Gray"
                           FontSize="12"/>

                    <!-- Critical Alert -->
                    <Frame BorderColor="#dc3545" Padding="10" HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Text="âš " TextColor="#dc3545"/>
                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="High PM2.5 Levels" FontAttributes="Bold" FontSize="14"/>
                                <Label Text="Sensor ID: AQ-1023 â€¢ Downtown" TextColor="Gray" FontSize="12"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="2" 
                                   Text="Critical"
                                   TextColor="White"
                                   BackgroundColor="#dc3545"
                                   Padding="8,4"
                                   FontSize="12"/>
                        </Grid>
                    </Frame>

                    <!-- Warning Alerts -->
                    <Frame BorderColor="#ffc107" Padding="10" HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Text="âš " TextColor="#ffc107"/>
                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Elevated Nitrate Levels" FontAttributes="Bold" FontSize="14"/>
                                <Label Text="Sensor ID: WQ-5672 â€¢ River Basin" TextColor="Gray" FontSize="12"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="2" 
                                   Text="Warning"
                                   TextColor="White"
                                   BackgroundColor="#ffc107"
                                   Padding="8,4"
                                   FontSize="12"/>
                        </Grid>
                    </Frame>

                    <Frame BorderColor="#ffc107" Padding="10" HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Text="âš " TextColor="#ffc107"/>
                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Sensor Maintenance Required" FontAttributes="Bold" FontSize="14"/>
                                <Label Text="Sensor ID: WS-3421 â€¢ North Station" TextColor="Gray" FontSize="12"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="2" 
                                   Text="Warning"
                                   TextColor="White"
                                   BackgroundColor="#ffc107"
                                   Padding="8,4"
                                   FontSize="12"/>
                        </Grid>
                    </Frame>

                    <Button Text="View All Alerts" 
                            BackgroundColor="Transparent"
                            TextColor="Gray"
                            BorderColor="Gray"
                            BorderWidth="1"
                            Margin="0,10,0,20"/>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage> 