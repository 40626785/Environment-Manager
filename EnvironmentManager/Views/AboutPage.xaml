<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:EnvironmentManager.ViewModels"
             x:Class="EnvironmentManager.Views.AboutPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Custom Navigation Bar -->
        <Grid Grid.Row="0" 
              BackgroundColor="#6b46c1" 
              Padding="15,40,15,15"
              ColumnDefinitions="*,Auto">
            
            <!-- Title -->
            <Label Grid.Column="0"
                   Text="About"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="10,0,0,0"
                   VerticalOptions="Center"/>
            
            <!-- Notification Button -->
            <Button Grid.Column="1"
                    Text="ðŸ””"
                    FontSize="18"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Padding="0"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"/>
        </Grid>

        <!-- Navigation Menu -->
        <Grid Grid.Row="1" BackgroundColor="#f5f5f5" Padding="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Dashboard" 
                   Grid.Column="0"
                   TextColor="#666666"
                   FontSize="16"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDashboardClicked"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="Maintenance" 
                   Grid.Column="1"
                   TextColor="#666666"
                   FontSize="16"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMaintenanceClicked"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="About" 
                   Grid.Column="2"
                   TextColor="#6750A4"
                   FontSize="16"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAboutClicked"/>
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <VerticalStackLayout Spacing="10" Margin="10">
                <HorizontalStackLayout Spacing="10">
                    <Image Source="dotnet_bot.png"
                           SemanticProperties.Description="The dot net bot waving hello!"
                           HeightRequest="64"/>
                    <Label FontSize="22"
                           FontAttributes="Bold"
                           Text="{Binding Title}"
                           VerticalOptions="End"/>
                    <Label FontSize="22"
                           Text="{Binding Version}"
                           VerticalOptions="End"/>
                </HorizontalStackLayout>

                <Label Text="{Binding Message}"/>
                <Button Text="Learn more..."
                        Command="{Binding ShowMoreInfoCommand}"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
