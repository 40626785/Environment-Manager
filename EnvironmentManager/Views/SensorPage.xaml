<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:EnvironmentManager.ViewModels"
             xmlns:models="clr-namespace:EnvironmentManager.Models"
             xmlns:converters="clr-namespace:EnvironmentManager.Converters"
             x:Class="EnvironmentManager.Views.SensorPage"
             x:DataType="viewModels:SensorViewModel"
             BackgroundColor="#F3F4F6"
             Title="Sensors">

    <Grid RowDefinitions="Auto,*" Padding="20">
        <!-- Header Section -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,10,0,20">
            <VerticalStackLayout Spacing="4">
                <Label Text="Sensor Management" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="#1F2937"/>
                <Label Text="Monitor and manage your environmental sensors"
                       FontSize="14"
                       TextColor="#6B7280"/>
            </VerticalStackLayout>
            
            <Button Grid.Column="1" 
                    Text="Add New Sensor" 
                    Command="{Binding NavigateToAddCommand}"
                    FontAttributes="Bold"
                    Padding="15,10"
                    BackgroundColor="#0EA5E9"
                    TextColor="White"
                    CornerRadius="8">
                <Button.Shadow>
                    <Shadow Brush="#0EA5E9"
                           Offset="0,2"
                           Radius="4"
                           Opacity="0.2"/>
                </Button.Shadow>
            </Button>
        </Grid>

        <!-- Sensor List Section -->
        <Frame Grid.Row="1" 
               BackgroundColor="White"
               Padding="0" 
               CornerRadius="12"
               BorderColor="Transparent"
               HasShadow="True">
            <Grid RowDefinitions="Auto,*" Padding="20">
                <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                    <Label Text="Existing Sensors" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    <Label Grid.Column="1" 
                           Text="{Binding Sensors.Count, StringFormat='{0} sensors'}"
                           TextColor="#6B7280"
                           VerticalOptions="Center"/>
                </Grid>
                
                <CollectionView Grid.Row="1" 
                              ItemsSource="{Binding Sensors}" 
                              SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Sensor">
                            <Frame Padding="15" 
                                   CornerRadius="8"
                                   BorderColor="#E5E7EB"
                                   HasShadow="False">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="15">
                                    <!-- Sensor Details -->
                                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="{Binding SensorName}" 
                                               FontAttributes="Bold" 
                                               FontSize="16"
                                               TextColor="#1F2937"/>
                                        <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="8">
                                            <Label Text="{Binding SensorType}" 
                                                   TextColor="#6B7280"
                                                   FontSize="14"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding Model}" 
                                                   TextColor="#6B7280"
                                                   FontSize="14"/>
                                        </Grid>
                                        <FlexLayout>
                                            <Border Padding="6,2"
                                                    BackgroundColor="#F3F4F6"
                                                    StrokeShape="RoundRectangle 12">
                                                <Label Text="{Binding Manufacturer}"
                                                       TextColor="#6B7280"
                                                       FontSize="12"/>
                                            </Border>
                                            <Border Margin="8,0,0,0"
                                                    Padding="6,2"
                                                    BackgroundColor="{Binding ConnectivityStatus, Converter={StaticResource StatusToColorConverter}, ConverterParameter=Background}"
                                                    StrokeShape="RoundRectangle 12">
                                                <Label Text="{Binding ConnectivityStatus}"
                                                       TextColor="White"
                                                       FontSize="12"/>
                                            </Border>
                                        </FlexLayout>
                                    </VerticalStackLayout>

                                    <!-- Edit Button -->
                                    <Button Grid.Column="1" 
                                            Text="Edit" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:SensorViewModel}}, Path=NavigateToEditCommand}" 
                                            CommandParameter="{Binding .}"
                                            FontAttributes="Bold"
                                            FontSize="14"
                                            CornerRadius="6"
                                            Padding="15,8"
                                            BackgroundColor="#F3F4F6"
                                            TextColor="#1F2937"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Grid RowDefinitions="*,Auto,Auto,*" 
                              Padding="20"
                              VerticalOptions="Center">
                            <Image Grid.Row="1"
                                   Source="sensor_empty.png"
                                   HeightRequest="120"
                                   Opacity="0.5"/>
                            <VerticalStackLayout Grid.Row="2" 
                                               Spacing="8"
                                               Margin="0,20,0,0">
                                <Label Text="No sensors found" 
                                       FontSize="20" 
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"
                                       HorizontalOptions="Center"/>
                                <Label Text="Add your first sensor to start monitoring" 
                                       FontSize="14" 
                                       TextColor="#6B7280"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Grid>
                    </CollectionView.EmptyView>
                </CollectionView>
            </Grid>
        </Frame>
    </Grid>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

</ContentPage>
