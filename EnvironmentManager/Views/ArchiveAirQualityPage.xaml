<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnvironmentManager.Views.ArchiveAirQualityPage"
             Title="Archive Air Quality">

    <Grid RowDefinitions="Auto, *"
          Padding="20">

        <!-- Controls Section -->
        <VerticalStackLayout Grid.Row="0"
                             Spacing="10">

            <!-- Page Title -->
            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="DarkBlue"
                               HeightRequest="40"/>

            <!-- Toggle Button for Filter Options -->
            <Button Text="{Binding ToggleFilterText}"
                    Command="{Binding ToggleFilterVisibilityCommand}"/>

            <!-- Collapsible Filter & Sort Section -->
            <StackLayout IsVisible="{Binding IsFilterVisible}"
                         Spacing="10">

                <!-- Sorting Controls -->
                <Label Text="Sort Field:"/>
                <Picker ItemsSource="{Binding SortOptions}"
                        SelectedItem="{Binding SelectedSortOption}"/>

                <Label Text="Sort Direction:"/>
                <Picker ItemsSource="{Binding SortDirections}"
                        SelectedItem="{Binding SelectedSortDirection}"/>

                <Button Text="Apply Sort"
                        Command="{Binding ApplySortCommand}"/>

                <!-- Date Range Filter -->
                <Label Text="Start Date:"/>
                <DatePicker Date="{Binding StartDate}"/>

                <Label Text="End Date:"/>
                <DatePicker Date="{Binding EndDate}"/>

                <Button Text="Apply Date Filter"
                        Command="{Binding FilterByDateRangeCommand}"/>

                <Button Text="Export to CSV"
                        Command="{Binding ExportToCsvCommand}"
                        BackgroundColor="Green"
                        TextColor="White"
                        Margin="0,0,0,10"/>

            </StackLayout>

            <!-- Single Delete Button -->
            <Button Text="Delete Filtered Records"
                    Command="{Binding DeleteFilteredCommand}"
                    BackgroundColor="Red"
                    TextColor="White"/>

        </VerticalStackLayout>

        <!-- Data List Section -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding TableData}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray"
                           CornerRadius="10"
                           Padding="10"
                           Margin="5">
                        <StackLayout>
                            <Label Text="{Binding Date, StringFormat='📅 {0:dd MMM yyyy}'}"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding Time, StringFormat='⏰ {0:hh\\:mm}'}"/>
                            <Label Text="{Binding Nitrogen_dioxide, StringFormat='NO₂: {0:F1} ppm'}"/>
                            <Label Text="{Binding Sulphur_dioxide, StringFormat='SO₂: {0:F2} ppm'}"/>
                            <Label Text="{Binding PM2_5_particulate_matter, StringFormat='PM2.5: {0:F2} µg/m³'}"/>
                            <Label Text="{Binding PM10_particulate_matter, StringFormat='PM10: {0:F2} µg/m³'}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
