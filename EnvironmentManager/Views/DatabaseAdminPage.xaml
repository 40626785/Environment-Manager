<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnvironmentManager.Views.DatabaseAdminPage"
             Title="DatabaseAdminPage">
        <VerticalStackLayout Padding="20">
                <Picker Title="Choose table"
                        ItemsSource="{Binding TableOptions}"
                        SelectedItem="{Binding SelectedTable}"/>

                <Button Text="Manage Table"
                        Command="{Binding NavigateToTableCommand}"/>

        </VerticalStackLayout>
</ContentPage>